/* pages/illegal/illegal.wxss */
.header {
  background: #fff;
  width: 100%;
  height: 120rpx;
  display: flex;
  flex-direction: row;
  padding: 10rpx 0;
  border-bottom: 0.005ex silver solid;
}

.header view {
  width: 32%;
  display: flex;
  line-height: 50rpx;
  flex-direction: column;
  align-items: center;
  padding: 10rpx 0;
}

.header text {
  font-size: 32rpx;
}

.border {
  border-right: 0.005ex silver solid;
}

.details_section {
  position: absolute;
  top: 160rpx;
  left: 0;
  bottom: 130rpx;
  width: 100%;
  overflow-y: auto;
}

checkbox {
  float: left;
  width: 8%;
  margin: 190rpx 0 0 16rpx;
}

.section {
  width: 80%;
  height: 400rpx;
  background: #fff;
  margin: 0 20rpx 20rpx 80rpx;
  padding: 20rpx;
  border-radius: 5px;
  border: 0.005ex silver solid;
}

.section text {
  font-size: 24rpx;
}

.section view {
  font-size: 30rpx;
  line-height: 80rpx;
  overflow: hidden;
}

.section image {
  display: block;
  float: left;
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
  margin-top: 20rpx;
}
.section text {
  display: block;
  float: left;
}
.section_row {
  display: flex;
  flex-direction: row;
  border-top: 0.005ex silver solid;
  border-bottom: 0.005ex silver solid;
}

.orange {
  color: #f66000;
}

.se_row {
  margin-right: 20rpx;
}

.noneIllegal{
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #BAB8B9;
}
.noneImg{
   width: 200rpx;
   height: 200rpx;
   margin: 260rpx 0 20rpx 0;
}